<% title t('.title') %>

<div class="row">
  <% if current_user.role? User::ROLES[:content_editor] %>
     <div class="col-sm-4">
      <ul>
        <li>
         <%= link_to t('.faq_categories'), admin_faq_categories_path %>
        </li>
        <li>
         <%= link_to t('.faqs'), admin_faqs_path %>
        </li>
        <li>
         <%= link_to t('.laws'), admin_laws_path %>
        </li>
        <li>
         <%= link_to t('.news_items'), admin_news_items_path %>
        </li>
        <li>
         <%= link_to t('.publications'), admin_publications_path %>
        </li>
      </ul>
    </div>
  <% end %>

  <% if current_user.role? User::ROLES[:user_manager] %>
    <div class="col-sm-4">
      <ul>
        <% if current_user.role? User::ROLES[:moderator] %>
          <li>
           <%= link_to t('.stories'), admin_stories_path %>
          </li>
        <% end %>  
        <li>
         <%= link_to t('.discrimination_types'), admin_discrimination_types_path %>
        </li>
        <li>
         <%= link_to t('.users'), admin_users_path %>
        </li>
        <% if current_user.role? User::ROLES[:admin] %>
          <li>
           <%= link_to t('.pages'), admin_pages_path %>
          </li>
          <li>
            <%= link_to t('.gamedata'), gamedata_path %>
          </li>
        <% end %>  
      </ul>
    </div>
  <% end %>  
</div>