<%- model_class = Faq -%>
<%- model_class_trans = FaqTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>


<div class="form-group form-group-admin-buttons">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_faqs_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_faq_path(@faq), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_faq_path(@faq),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
  <%= link_to t('helpers.links.admin'), admin_path, :class => 'btn btn-default' %>
</div>

<p><strong><%= model_class.human_attribute_name(:faq_category_id) %>:</strong>
<%= @faq.faq_category.name %></p>

<p><strong><%= model_class_trans.human_attribute_name(:question) %>:</strong>
<%= @faq.question %></p>

<p><strong><%= model_class_trans.human_attribute_name(:answer) %>:</strong>
<div class="tinymce_format">
  <%= simple_format_no_tags(@faq.answer, {}, {sanitize: false}) %>
</div>

<p><strong><%= model_class.human_attribute_name(:sort) %>:</strong>
<%= @faq.sort %></p>
