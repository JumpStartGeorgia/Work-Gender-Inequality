<%- model_class = Faq -%>
<%- model_class_trans = FaqTranslation -%>
<% title t '.title', :default => model_class.model_name.human.pluralize %>

<div class="form-group form-group-admin-buttons">
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_admin_faq_path,
              :class => 'btn btn-primary' %>
  <%= link_to t('helpers.links.admin'), admin_path,
  :class => 'btn btn-default' %>
</div>

<table class="table table-striped display">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:faq_category_id) %></th>
      <th><%= model_class_trans.human_attribute_name(:question) %></th>
      <th><%= model_class.human_attribute_name(:sort) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @faqs.each do |faq| %>
      <tr>
        <td><%= faq.faq_category.name %></td>
        <td><%= faq.question %></td>
        <td><%= faq.sort %></td>
        <td>
          <%= link_to t('app.buttons.edit'),
                      edit_admin_faq_path(faq), :class => 'btn btn-mini btn-default' %>
          <%= link_to t('app.buttons.delete'),
                      admin_faq_path(faq),
                      :method => :delete,
                      :data => { :confirm => I18n.t("helpers.links.confirm") },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


