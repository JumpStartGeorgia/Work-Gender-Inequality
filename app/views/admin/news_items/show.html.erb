<%- model_class = NewsItem -%>
<%- model_class_trans = NewsItemTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>


<div class="form-group form-group-admin-buttons">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_news_items_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_news_item_path(@news_item), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_news_item_path(@news_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
  <%= link_to t('helpers.links.admin'), admin_path, :class => 'btn btn-default' %>
</div>

<p><strong><%= model_class.human_attribute_name(:is_published) %>:</strong>
<%= @news_item.is_published %></p>

<p><strong><%= model_class.human_attribute_name(:published_at) %>:</strong>
<%= l @news_item.published_at if @news_item.published_at.present? %></p>

<p><strong><%= model_class.human_attribute_name(:thumbnail) %>:</strong><br/>
<%= image_tag(@news_item.thumbnail.url(:small), width: 150) %></p>

<p><strong><%= model_class_trans.human_attribute_name(:title) %>:</strong>
<%= @news_item.title %></p>

<p><strong><%= model_class_trans.human_attribute_name(:content) %>:</strong>
<div class="tinymce_format">
  <%= simple_format_no_tags(@news_item.content, {}, {sanitize: false}) %>
</div>

