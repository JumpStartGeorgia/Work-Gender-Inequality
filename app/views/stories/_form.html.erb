<%= semantic_form_for(@story) do |f| %>
  <%= f.error_messages %>

  <%= f.inputs do %>
    <%= f.input :discrimination_type_id, :as => :select, :collection => @types %>
    <%= f.input :content, :as => :text, :input_html => {rows: 10} %>
    <%= f.input :is_public, as: :radio, :required => false, :inline => true %>
  <% end %>

  <div class="row" id="row1">
    <div id="story-optional" class="story-box col-sm-5">
      <p>
        <%= t('.optional_explanation') %>
      </p>

      <%= f.inputs do %>
        <%= f.input :gender, as: :radio, required: false, :collection => @genders, :inline => true %>
        <%= f.input :age, as: :string, :input_html => { :size => 10 } %>
        <%= f.input :region, :input_html => { :size => 30 } %>
      <% end %>
    </div>
    <div id="story-contact" class="story-box col-sm-5 col-sm-offset-1">
      <p>
        <%= t('.contact_explanation1') %>
      </p>
      <p>
        <%= t('.contact_explanation2') %>
      </p>

      <%= f.inputs do %>
        <%= f.input :contact_a42, as: :radio, :required => false, :inline => true %>
        <%= f.input :name, :input_html => { :size => 30 } %>
        <%= f.input :email, as: :email, :input_html => { :size => 30 } %>
      <% end %>
    </div>

  </div>


  <div class="form-group">
    <%= f.submit nil, :class => 'btn-submit btn-form' %>
    <%= f.submit t('helpers.links.reset'), :class => 'btn-reset btn-form', :type => :reset, :name => :reset %>
    <%= link_to t('helpers.links.cancel'), stories_path, :class => 'btn-cancel btn-form' %>
  </div>
<% end %>

