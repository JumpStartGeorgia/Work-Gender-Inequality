<%- model_class = Story -%>
<% title t '.title' %>
<% 
  links = link_to(t('helpers.links.add_story'), new_story_path, :class => 'btn btn-primary')
  title_right links 
%>
<div id="stories-show">
<% if @stories.present? %>
  <% @stories.each_with_index do |story, index| %>
    <% if index%3 == 0 %>
      <% if index != 0 %>
        </div>
      <% end %>
      <div class="row story-item-row">
    <% end %>

    <div class="col-sm-4">
      <div class="clear story-header">
        <div class="pull-left date"><%= l story.created_at, format: :date_only %></div>
        <div class="pull-right type"><%= story.discrimination_type.name %></div>
      </div>
      <p><%= truncate(story.content, separator: ' ', omission: '...', length: 100) %></p>
      <div class="pull-right"><%= link_to t('helpers.links.view_story'), story_path(story), class: 'btn btn-default btn-sm' %></div>
    </div> 

    <% if index == @stories.length-1 %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <p>
    <%= t('.no_stories') %>
  </p>
<% end %>

</div>